<!DOCTYPE html>
<h1 class="bg-success text-center text-white py-4 nav-text" >User Orders</h1>

<div class="container-fluid " >
     <% @current_user = Payment.all %>
<% if @current_user.count > 0 %>

    <div class="row" style="min-height: 500px;">

        <div class="col-md col bg-white ">
            <div class="row p-3 border">

                <div class="row p-3">
                    <% Payment.all.each do |payment| %>

                    <div class="col-md">
                        <small><strong> Name:</strong> <%= payment.name %></small>
                    </div>
                    <div class="col-md my-sm-0 my-2">
                        <small><strong> Title:</strong> <%= payment.product_title %></small>
                    </div>
                    <div class="col-md">
                        <small><strong> Quantity:</strong> <%= payment.number_of_items %></small>
                    </div>
                    <div class="col-md">
                        <small><strong> Total:</strong> <%= payment.total_price %></small>
                    </div>
                    <div class="col-md">
                        <small><strong> Number:</strong> <%= payment.number %></small>
                    </div>

                    <div class="col-md">
                        <small><strong> City:</strong> <%= payment.city %></small>
                    </div>

                    <div class="col-md">
                        <small><strong> Address:</strong> <%= payment.address %></small>
                    </div>
                    
                    <div class="col-md">
                        <small><strong> Pincode:</strong> <%= payment.pincode %></small>
                    </div>
<% @pay = payment.status %>
                    <div class="col-md">
                        <small><strong> Status:</strong> 
                            <% if @pay == false %>
                            <form action="/status/<%=  payment.id %>"> <input type="hidden" name="order[status]" checked value = "true"  > <button type="submit" class="btn btn-primary mb-1">Complete</button>
                               <% end %> 
                                <% if @pay == false %>
                        <p class="bg-warning w-50 text-center py-1">Pending</p>
                        <% else %>
                        <p class="bg-success w-50   text-center py-1">Completed</p>
                        <% end %>
                        </form> </small>
                    </div>



    <hr>
                    <% end %>

            </div>
        </div>


    </div>
    <% else %>
    <h1>No order</h1>
    <% end %>
</div>


