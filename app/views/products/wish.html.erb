<h1 class="text-center bg-success text-white p-3" style="font-family: poppins, sans-serif;">Favourite</h1>

<% list = Wish.where(users_id: current_user.id) %>

<% if list.count > 0 %>

<div class="container my-5" style="min-height: 400px;">
<div class=" my-5 border bg-white rounded Small shadow ">

<% list_wish = Wish.where(users_id: current_user.id) %>
<% list_wish.map do |cur_item| %>
<% cur_product = Product.find(cur_item['products_id']) %>
<div class="row  p-3">
    <div class="col-lg-1  me-4">
        <p><%=  image_tag(cur_product['image'],class:"img-fluid ") %></p>
        <%= link_to 'View' , product_path(cur_product),class:"btn-sm btn-primary text-decoration-none view" %>

    </div>
    
    <div class="col-md-9">
        <p><%= cur_product['title'] %> <br>
        <small class=" rounded p-1 bg-success text-white" style="font-size: 12px;">4.2 <em class="bi bi-star-fill "></em></small>
        </p>
        <strong class="h5">â‚¹<%= cur_product['price'].to_i %></strong>
    </div>
    <div class="col-md-1">
        <%= link_to "", product_id_url(cur_product),class:"me-2 bi bi-trash text-muted fs-5 " %>

    </div>
    <hr class="mt-2">
</div>
<% end %>

</div>
<% else %>
<div style="min-height: 400px;" class="d-flex justify-content-center align-items-center">
<h1 class=" text-muted my-5">NO Items in Wishlist</h1>
</div>
<% end %>

</div>

