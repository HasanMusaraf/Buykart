<div class="container my-5">

<h1 class="text-center my-5">Search Results</h1>

<div class="row py-2 justify-content-center gap-5">
    <% @products1.each do |product| %>

      <div class="card col-lg-2 text-white Regular shadow">
        <%= image_tag product.image,class:"img-fluid img-thumbnail pt-2 border-0 " %>
        <div class=" card-img-overlay ">
          <div class=" card-text pb-4">
          <%= link_to '' , product,class:"btn-sm btn-success me-2 bi bi-heart-fill fav" %>
          
            <%= link_to 'View' , product,class:"btn-sm btn-primary text-decoration-none view" %>

      </div>


  </div>
  <div class="card-body">
    <p class="card-text text-muted" style="color:black;">
      <%= product.brand %>
    </p>
    <p class="card-text " style="color:black;">
      <%= product.title %>
    </p>
    <p class="card-text " style="color:black;">
      <%= product.price %>
    </p>
  </div>


</div>
<% end %>

  </div>
  <br>

</div>

